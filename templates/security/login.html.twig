{% extends 'base.html.twig' %}

{% block title %}{{ app.session.get("setting").websiteName }} | Connexion{% endblock %}

{% block body %}

    {% include "top_page/top.html.twig" with {'page_name':'Connexion'} %}

	<div class="main_content">
		<div class="login_register_wrap section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-6 col-md-10">
						<div class="login_wrap">
							<div class="padding_eight_all bg-white">
								<div class="heading_s1">
									<h3>Connexion</h3>
								</div>
								<form method="post" class="ng-untouched ng-pristine ng-invalid">

									{% if error %}
										<div class="alert alert-danger">
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </div>
									{% endif %}

									{% if app.user %}
										<div class="mb-3">
											Connecté depuis
											{{ app.user.userIdentifier }},
											<a href="{{ path('app_logout') }}">Déconnexion</a>
										</div>
									{% endif %}

									<div class="form-group mb-3">
                                        <input type="text" 
                                        required="" 
                                        name="email" 
                                        formcontrolname="email" 
                                        placeholder="Enter Your Email" 
                                        class="form-control ng-untouched ng-pristine ng-invalid autocomplete="email" 
                                        value="{{ last_username }}"
                                        required autofocus">
									</div>

									<div class="form-group mb-3">
                                        <input required="" 
                                        type="password" 
                                        formcontrolname="password" 
                                        name="password" 
                                        placeholder="Enter Your Password" 
                                        class="form-control ng-untouched ng-pristine ng-invalid autocomplete=" 
                                        current-password" required">
									</div>

									<!--<div class="login_footer form-group mb-3">
